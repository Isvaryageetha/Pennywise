<resources>
    <style name="Theme.Pennywise" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary colors for dark mode -->
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryVariant">@color/turquoise</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary dark theme colors -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background + Text adapt automatically -->
        <item name="android:colorBackground">?android:colorBackground</item>
        <item name="android:textColor">?android:textColorPrimary</item>

    </style>
</resources>
