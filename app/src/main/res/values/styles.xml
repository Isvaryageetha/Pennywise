<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Add this base TextView style to fix the error -->
    <style name="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Your existing Pennywise styles -->
    <style name="TextView.Pennywise">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Pennywise.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Pennywise.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Pennywise.Footer">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Pennywise" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextInputLayout.Pennywise" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="ProgressBar.Pennywise" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
    </style>
</resources>